@model PriceViewModel
@{
    ViewData["Title"] = "价格管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="content">
        <form asp-action="Index" class="form-inline" method="get">
            <div class="form-group">
                <label class="control-label">商品名称：</label>
                <input class="form-control" asp-for="GoodsName">
            </div>

            <div class="form-group">
                <label class="control-label">所属品牌：</label>
                <select class="form-control" asp-for="BrandId">
                    <option value="">请选择</option>
                    @foreach (var item in Model.Brands)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <button class="btn btn-info" type="submit"><i class="fa fa-search"></i>查询</button>

            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="content">
        <table class="table">
            <thead>
                <tr>
                    <th>图片</th>
                    <th>
                        商品名称
                    </th>
                    <th>
                        商品条码
                    </th>
                    <th>
                        品牌
                    </th>
                    <th>
                        规格
                    </th>
                    <th>
                        单位
                    </th>
                    <th>
                        单价
                    </th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Row)
                {
                <tr>
                    <td>
                        <img src="@item.GoodsImg" alt="" width="60" height="60" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoodsName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoodsCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BrandName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoodsSepc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GoodsUnit)
                    </td>
                    <td>
                        ¥@Html.DisplayFor(modelItem => item.GoodsPrice)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">价格管理</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <ul class="pagination">
            <pager generation-mode="ListOnly" source="Model.Row" />
        </ul>
    </div>
</div>