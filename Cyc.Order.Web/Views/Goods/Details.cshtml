@model Cyc.Order.Data.DataModel.Goods
@{
    ViewData["Title"] = Model.GoodsName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="content">
        <section class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">商品图片</label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        <img src="@Html.DisplayFor(model => model.GoodsImg)" alt="Alternate Text" width="135" height="135" />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">
                    商品名称
                </label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.GoodsName)
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">
                    商品编码
                </label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.GoodsCode)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    品牌
                </label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.Brand.Name)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    商品规格
                </label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.GoodsSepc)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    单位
                </label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.GoodsUnit)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">
                    添加时间
                </label>
                <div class="col-sm-10">
                    <div class="form-control-static">
                        @Html.DisplayFor(model => model.AddTime)
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">修改</a> |
    <a asp-action="Index">返回列表</a>
</div>