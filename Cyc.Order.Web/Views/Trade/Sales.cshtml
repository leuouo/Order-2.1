@model SalesViewModel
@{
    ViewData["Title"] = "销售统计";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="content">
        <form asp-action="Sales" class="form-inline" method="get">
            <div class="form-group">
                <label class="control-label">账单日期：</label>
                <select class="form-control" asp-for="BillDate" asp-items="Model.BillDateList">
                    
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">店铺名称：</label>
                <input class="form-control" asp-for="ShopName">
            </div>

            <div class="form-group">
                <button class="btn btn-info" type="submit"><i class="fa fa-search"></i>查询</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="content">
        <div class="table-responsive">
            <table class="table order-table">
                <thead>
                    <tr>
                        <th>商铺名称</th>
                        <th>销售总量</th>
                        <th>销售总额(元)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                   @foreach (var item in Model.ShopSales)
                   {
                       <tr>
                           <td>@item.ShopName</td>
                           <td>@item.SaleCount</td>
                           <td>@item.TotalAmount</td>
                           <td><a asp-controller="Trade" asp-action="SaleDetail" asp-route-shopId="@item.ShopId" asp-route-billDate="@Model.BillDate">详情</a></td>
                       </tr>
                   }
                </tbody>
            </table>

            <div class="text-center">
                <ul class="pagination">
                   
                </ul>
            </div>
        </div>
    </div>
</div>